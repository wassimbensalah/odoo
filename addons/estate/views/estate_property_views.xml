<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Properties">
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="data_availability" string="Available From"/>
            </tree>
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Properties">
                <header>
                    <button name="action_set_property_as_sold" type="object" string="Sold" />
                    <button name="action_set_property_as_canceled" type="object" string="Cancel" />
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags"/>

                    <group>
                        <group>
                            <field name="state" string="Status"/>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="data_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="selling_price"/>
                        </group>
                            <notebook>
                                    <page string="Description">
                                        <group>
                                        <field name="description"/>
                                        <field name="bedrooms"/>
                                        <field name="living_area"/>
                                        <field name="facades"/>
                                        <field name="garage"/>
                                        <field name="garden"/>
                                        <field name="garden_area"/>
                                        <field name="garden_orientation"/>
                                        <field name="total_area"/>
                                        </group>
                                    </page>
                                    <page string="Other Info">
                                        <group>
                                            <field name="salesperson_id" string="Salesman"/>
                                            <field name="buyer_id" />
                                        </group>
                                    </page>
                                    <page string="Offers">
                                            <field name="offer_ids">
                                                <tree string="Offers">
                                                    <field name="price"/>
                                                    <field name="partner_id"/>
                                                        <button name="action_accept_offer" type="object" icon="fa-check"/>
                                                        <button name="action_refuse_offer" type="object" icon="fa-times"/>
                                                    <field name="status"/>
                                                </tree>
                                            </field>
                                    </page>
                            </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.properties.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="facades"/>
                <filter name="Available" domain="['|', '|', ('state', '=', 'new'), ('state', '=', 'offer_received')]" />
                <group expand="1" string="Group By">
                    <filter name="postcode" context="{'group_by':'postcode'}"/>
                </group>
            </search>
        </field>
    </record>

</odoo>
